modules = ["nodejs-20", "web"]
run = "npm run dev"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "npx serve out -s -l 80 --cors --host 0.0.0.0"]
deploymentTarget = "static"
publicDir = "out"
build = ["sh", "-c", "npm run build"]

[workflows]
runButton = "AWESOME DEPLOY"

[[workflows.workflow]]
name = "AWESOME DEPLOY"
author = 22930014
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"üöÄ DEPLOYING AWESOME CENTENNIAL HILLS WEBSITE\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"============================================\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"next|serve|node\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 2"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"üì¶ Installing dependencies...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install --legacy-peer-deps"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"üî® Building static site...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"üìÅ Verifying build output...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "ls -la out/ | head -10"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"‚úÖ Starting production server from out directory...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx serve out -s -l 5000 --cors --host 0.0.0.0"

[[workflows.workflow]]
name = "Development Mode"
author = 22930014
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"üõ†Ô∏è Starting development server...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Quick Build Test"
author = 22930014
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"üî® Testing build process...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install --legacy-peer-deps"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"‚úÖ Build completed successfully!\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "ls -la out/"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 3000
externalPort = 3000
